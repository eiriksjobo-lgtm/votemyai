<div class="toast" id="toast"></div>

<script type="module">
  import { createClient } from 'https://cdn.jsdelivr.net/npm/@supabase/supabase-js/+esm';

  const SUPABASE_URL = 'https://pkpkgaaowtcmuqzgqvda.supabase.co';
  const SUPABASE_KEY = 'sb_publishable_px-Cw2XvKCGQKff0bb22uQ_ufIJchQw';
  const sb = createClient(SUPABASE_URL, SUPABASE_KEY);

  function showToast(msg) {
    const t = document.getElementById('toast');
    t.textContent = msg;
    t.classList.add('show');
    setTimeout(() => t.classList.remove('show'), 3200);
  }

  function esc(str) {
    return String(str).replace(/[&<>"']/g, c =>
      ({'&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;',"'":'&#39;'}[c]));
  }

  /* ── Sjekk innlogging ── */
  const { data: { session } } = await sb.auth.getSession();
  if (!session) {
    window.location.href = '/login.html';
  }

  const user = session.user;

  /* ── Hent profil ── */
  const { data: profile } = await sb
    .from('profiles')
    .select('username')
    .eq('id', user.id)
    .single();

  const username = profile?.username || user.email.split('@')[0];

  /* ── Hent tracks ── */
  const { data: tracks } = await sb
    .from('tracks')
    .select('*')
    .eq('user_id', user.id)
    .order('created_at', { ascending: false });

  const myTracks = tracks || [];
  const totalVotes = myTracks.reduce((sum, t) => sum + (t.votes || 0), 0);

  /* ── Oppdater UI ── */
  document.getElementById('loadingState').style.display = 'none';
  document.getElementById('profileContent').style.display = 'block';

  document.getElementById('avatarEl').textContent   = username[0].toUpperCase();
  document.getElementById('usernameEl').textContent = '@' + username;
  document.getElementById('emailEl').textContent    = user.email;
  document.getElementById('trackCountEl').textContent = myTracks.length;
  document.getElementById('voteCountEl').textContent  = totalVotes;

  /* ── Render tracks ── */
  const list = document.getElementById('trackList');
  if (myTracks.length > 0) {
    list.innerHTML = myTracks.map(t => `
      <div class="track-item">
        <img class="track-thumb"
          src="https://img.youtube.com/vi/${esc(t.yt_id)}/mqdefault.jpg"
          alt="" onerror="this.style.background='#222'">
        <div class="track-details">
          <div class="track-name">${esc(t.title)}</div>
          <div class="track-meta">
            <span class="track-tool">${esc(t.tool)}</span>
            ${esc(t.genre)}
          </div>
        </div>
        <div class="track-votes">
          ${t.votes || 0}
          <span class="vote-lbl">votes</span>
        </div>
      </div>
    `).join('');
  }

  /* ── Logg ut ── */
  window.logout = async function() {
    await sb.auth.signOut();
    window.location.href = '/';
  };
</script>
